{
  "name": "kite-weapp",
  "version": "0.0.1",
  "description": "A WeChat Mini Program Component Library",
  "type": "module",
  "miniprogram": "miniprogram_dist",
  "files": [
    "miniprogram_dist"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development gulp -f scripts/gulpfile.js dev --cwd .",
    "build": "cross-env NODE_ENV=production gulp -f scripts/gulpfile.js build --cwd .",
    "lint": "eslint \"{src,example}/**/*.{js,ts}\"",
    "format": "prettier \"{src,example,scripts}/**/*.{wxml,js,ts,wxs,scss,json}\" --write",
    "test": "jest --watch",
    "cover": "jest --coverage",
    "release": "release-it",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint",
    "*.{wxml,js,ts,wxs,scss,json}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/985563349/kite-weapp.git"
  },
  "keywords": [
    "kite",
    "miniprogram"
  ],
  "author": "Jee",
  "license": "MIT",
  "homepage": "https://github.com/985563349/kite-weapp#readme",
  "engines": {
    "node": ">=20.11.1"
  },
  "packageManager": "pnpm@9.0.6",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.0.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@swc/core": "^1.4.16",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "cross-env": "^7.0.3",
    "del": "^5.1.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "gulp": "^4.0.2",
    "gulp-changed": "^5.0.2",
    "gulp-if": "^3.0.0",
    "gulp-less": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "minimist": "^1.2.8",
    "miniprogram-api-typings": "^3.12.2",
    "miniprogram-simulate": "^1.6.1",
    "prettier": "^3.2.5",
    "release-it": "^17.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.7.0",
    "vitepress": "^1.1.3"
  }
}
